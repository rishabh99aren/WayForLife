<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wfl.pravin.wayforlife">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user" />
        <activity android:name=".ImagesActivity" />
        <activity
            android:name=".ComplaintsActivity"
            android:label="Complaints"
            android:parentActivityName=".NewFeedActivity" />
        <activity
            android:name=".NewFeedActivity"
            android:label="Discussions"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DiscussionDetails"
            android:label="Comments"
            android:parentActivityName=".NewFeedActivity" />
        <!--For testing, this app is launcher activity-->
        <activity
            android:name=".PollActivity"
            android:label="@string/title_activity_poll"
            android:parentActivityName=".NewFeedActivity" />
    </application>

</manifest>