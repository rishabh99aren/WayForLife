<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="108dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Title:" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />


    <Button
        android:id="@+id/button_chose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="158dp"
        android:text="Chose Image" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="139dp"
        android:layout_height="52dp"

        android:layout_alignStart="@+id/ComplaintTitle"
        android:layout_alignTop="@+id/button_chose_image" />

    <EditText
        android:id="@+id/ComplaintTitle"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title"
        android:layout_alignEnd="@+id/location"
        android:hint="Write Title Here" />

    <EditText
        android:id="@+id/enteredCity"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/city"
        android:layout_alignStart="@+id/image_view"
        android:hint="Enter your city here" />

    <EditText
        android:id="@+id/edit_text_file_name"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/image_view"
        android:layout_alignTop="@+id/textView6"
        android:hint="Write Description Here" />

    <Button
        android:id="@+id/button_upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/text_view_show_upload"
        android:layout_marginStart="29dp"
        android:text="Upload Image" />

    <TextView
        android:id="@+id/text_view_show_upload"
        android:layout_width="wrap_content"
        android:layout_height="45dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="102dp"
        android:gravity="center"
        android:hint="Show upload"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/location"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="128dp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <!--
    <TextView
        android:id="@+id/textView"
        android:layout_width="108dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/button_chose_image"
        android:layout_alignParentTop="true"
        android:layout_marginTop="199dp"
        android:gravity="center"
        android:text="City:" />
        -->

    <TextView
        android:id="@+id/city"
        android:layout_width="108dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:gravity="center"
        android:text="City:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="108dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Complaint:" />

  <!--
    <AutoCompleteTextView
        android:id="@+id/coutry"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:hint="Select country" />
    -->

</RelativeLayout>