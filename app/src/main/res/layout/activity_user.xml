<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".UserActivity">

    <TextView
        android:id="@+id/event"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:text="Title:" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />


    <Button
        android:id="@+id/button_chose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="238dp"
        android:layout_toStartOf="@+id/ComplaintTitle"
        android:text="Chose Image" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="218dp"
        android:layout_height="150dp"

        android:layout_alignTop="@+id/button_chose_image"
        android:layout_toEndOf="@+id/button_upload_image" />

    <EditText
        android:id="@+id/ComplaintTitle"
        android:layout_width="253dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/event"
        android:background="#ffffff"
        android:hint="Write Title Here" />

    <EditText
        android:id="@+id/enteredCity"
        android:layout_width="256dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/city"
        android:background="#ffffff"
        android:hint="Enter your city here" />

    <EditText
        android:id="@+id/edit_text_file_name"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:background="#ffffff"
        android:gravity="start"
        android:hint="Write Description Here"
        android:minHeight="100sp" />

    <Button
        android:id="@+id/button_upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/text_view_show_upload"
        android:layout_marginStart="29dp"
        android:text="Upload Post" />

    <TextView
        android:id="@+id/text_view_show_upload"
        android:layout_width="wrap_content"
        android:layout_height="45dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="102dp"
        android:gravity="center"
        android:hint="Show upload"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:visibility="invisible" />

    <!--
    <TextView
        android:id="@+id/textView"
        android:layout_width="108dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/button_chose_image"
        android:layout_alignParentTop="true"
        android:layout_marginTop="199dp"
        android:gravity="center"
        android:text="City:" />
        -->

    <TextView
        android:id="@+id/city"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="213dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="City:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Complaint:" />

  <!--
    <AutoCompleteTextView
        android:id="@+id/coutry"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:hint="Select country" />
    -->

</RelativeLayout>